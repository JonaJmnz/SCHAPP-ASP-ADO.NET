@{
    ViewData["Title"] = "Home";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendario con Bootstrap 5</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FullCalendar CSS -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet">
    <style>
        /* Transformar los textos del calendario a mayúsculas */
        .fc-toolbar-title {
            text-transform: uppercase;
        }

        .fc-button {
            text-transform: uppercase;
        }

        .fc-daygrid-day-number {
            text-transform: uppercase;
        }

        .fc-daygrid-day {
            text-transform: uppercase;
        }

        .fc-event-title {
            text-transform: uppercase;
        }
    </style>
</head>
<body>
    <div>
        <!-- Campo Servicio-->
        <div class="mb-3 bg-white">
            <label for="tipo" class="form-label">Servicio</label>
            <select id="tipo" class="form-select" required>
                <option value="" disabled selected>Selecciona una opción</option>
                <option value="barberia">Barberia</option>
                <option value="pestanas">Pestañas</option>
                <option value="unas">Uñas</option>
            </select>
        </div>
    </div>

    <!-- Calendario-->
    <div class="container-fluid my-4">
        <div id="calendar"></div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- FullCalendar JS -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>

    <!-- Script para inicializar el calendario -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'es',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: [
                    {
                        title: 'Evento 1',
                        start: '2024-08-01'
                    },
                    {
                        title: 'Evento 2',
                        start: '2024-08-07',
                        end: '2024-08-10'
                    },
                    {
                        title: 'Evento 3',
                        start: '2024-08-14T10:30:00',
                        end: '2024-08-14T12:30:00'
                    }
                ]
            });
            calendar.render();

            document.getElementById("btnSalir").addEventListener("click", function () {
                console.log("click");
            });
        });
    </script>
</body>
